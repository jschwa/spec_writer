.container
  .login
    .login-screen
      .login-icon
        = image_tag "icon.png"
        %h1
          .sign-up
            Sign Up
      .login-form
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, :autofocus => true, :placeholder  => "Email", :class => "form-control login-field"
            %label.login-field-icon.fui-mail{for: "user_email]"}
          .form-group
            = f.password_field :password, :placeholder => "Password", :class => "form-control login-field"
            %label.login-field-icon.fui-lock{for: "user_password"}
          .form-group
            = f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "form-control login-field"
            %label.login-field-icon.fui-lock{for: "user_password_confirmation"}
          %div= f.submit "Sign up", :class => "btn btn-primary btn-lg btn-block"
        = render "devise/shared/links"