%h1
  Page
  = @page.name

= link_to "Add feature", "#add-feature", class: "add-feature-link"
= hidden_field_tag :reorder_features_path, page_reorder_features_path(@page)
.feature-form.hidden
  = render partial: "feature_form"

%ul.feature-list
  - @list_features.each do |single_feature|
    = render partial: "feature", locals: {feature: single_feature}
