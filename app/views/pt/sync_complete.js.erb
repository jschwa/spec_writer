$(".progress-bar-container").hide();
$('#sync-with-pt-modal').on('hide', function (e) {
    $("#sync-with-pt-modal").remove();
})
<% if @pt_error.nil? %>
$(".sync-complete").show();
setTimeout(function () {
  $("#sync-with-pt-modal").modal("hide");
}, 2000);
<%else%>
$(".sync-failed").show();
$(".error-msg").html("<%= @pt_error %>");
<%end%>