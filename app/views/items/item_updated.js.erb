$("li.item[data-position=<%=@item.position%>] .edit-form").slideUp(function () {
    $("li.item[data-position=<%=@item.position%>]").html("<%= escape_javascript(render(partial: "item", locals: {item: @item})) %>");
    $("li.item[data-position=<%=@item.position%>] .item-view-container").show();
});

