$("li.item[data-position=<%=@item.position%>] .edit-form").fadeOut(function () {
  $("li.item[data-position=<%=@item.position%>]").replaceWith("<%= escape_javascript(render(partial: "item", locals: {item: @item})) %>");
  $("li.item[data-position=<%=@item.position%>] .item-view-container").show();
  window.initActionsContainer();
  window.initAddHere();
});

